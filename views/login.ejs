<div class="container-scroller">
  <div class="container-fluid page-body-wrapper full-page-wrapper">
    <div class="content-wrapper d-flex align-items-center auth px-0">
      <div class="row w-100 mx-0">
        <div class="col-lg-4 mx-auto">
          <div class="auth-form-light text-left py-5 px-4 px-sm-5">
            <h1>Hello! let's get started</h1>
            <h3 class="font-weight-light">Sign in to continue.</h3>
            <form class="pt-3" action="/login" enctype="multipart/form-data" method="POST">
              <div class="form-group">
                <input type="email" class="form-control form-control-lg font-weight-bold" id="loginInputEmail1" placeholder="Username">
              </div>
              <div class="form-group">
                <input type="password" class="form-control form-control-lg font-weight-bold" id="loginInputPassword1" placeholder="Password">
              </div>
              <div class="mt-3">
                <input type="button" value="submit" class="btn btn-block btn-warning btn-lg auth-form-btn text-white" onclick="login()">
              </div>
              <div class="my-2 d-flex justify-content-between align-items-center">
                <a href="#" class="auth-link text-black">Forgot password?</a>
              </div>
              <h3 class="text-center mt-4 font-weight-light">
                Don't have an account? <a href="/register" class="text-primary">Create</a>
              </h3>
            </form>
          </div>
        </div>
      </div>
    </div>
    <!-- content-wrapper ends -->
  </div>
  <!-- page-body-wrapper ends -->
</div>
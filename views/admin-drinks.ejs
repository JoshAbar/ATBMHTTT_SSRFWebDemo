<!--**********************************
            Content body start
***********************************-->
<style>
  .col-2 img {
    width: 100%;
    height: 20vh;
    object-fit: contain;
  }
</style>
<div class="content-body">
  <!-- row -->
  <div class="container-fluid">
    <div class="row justify-content-center">
      <% if (drinks != '') { %> <% drinks.forEach(function(drink, index){ %>
      <div class="col-6">
        <div class="card">
          <div class="card-body">
            <div class="row rounded">
              <div class="col-4">
                <img
                  class="img-fluid img-responsive rounded product-image"
                  id="product"
                  src="<%= drink.image_url%>"
                  style="object-fit: cover"
                />
              </div>
              <div class="col-6 border-left mt-1">
                <h5><%= drink.name %></h5>
                <div class="mt-1 mb-1 spec-1"><%= drink.type %></div>
                <p class="text-justify text-truncate para mb-0"><%= drink.description%></p>
              </div>
              <div class="align-items-center align-content-center col-md-2 border-left mt-1">
                <div class="d-flex flex-row">
                  <h4 class="mr-1"><%= drink.price %> VND</h4>
                </div>
                <div class="d-flex flex-column mt-4">
                  <button class="btn btn-warning btn-sm" type="button">Update</button>
                  <button class="btn btn-outline-danger btn-sm mt-2" type="button">Delete</button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <% }) %> <% } else { %>
      <h4>No item found</h4>
      <% } %>
    </div>
  </div>
</div>
<!-- #/ container -->
<!--**********************************
                Content body end
    ***********************************-->

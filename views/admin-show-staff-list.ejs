<style>
  .col-3 img {
    width: 100%;
    height: 15vh;
    object-fit: cover;
  }
</style>
<div class="content-body pt-3">
  <!-- row -->
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-xs mb-0">
                <thead>
                  <tr>
                    <th>NAME</th>
                    <th>START DELIVERY</th>
                    <th>STATUS</th>
                  </tr>
                </thead>
                <% if(shippers != '') { %>
                <tbody>
                  <%shippers.forEach(function(shipper, index) {%>
                  <tr>
                    <td>
                      <span><%= shipper.name %></span>
                    </td>
                    <td><%= shipper.begin %></td>

                    <td>
                      <% if (shipper.status == 'done') {%>
                      <i class="fa fa-circle-o text-success mr-2"><%= shipper.status %></i>
                      <% } else { %>
                      <i class="fa fa-circle-o text-danger mr-2"><%= shipper.status %></i>
                      <% } %>
                    </td>
                  </tr>
                  <% }) %>
                </tbody>
                <% } %>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- #/ container -->
<!--**********************************
                  Content body end
      ***********************************-->
